<%= form_for(@teacher) do |f| %>
    <% if @teacher.errors.any? %>
        <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
            <% @teacher.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
    
    <%= f.submit %>
    <% end %>