
<h1> Enroll a student </h1>

<%= form_for(@student) do |f| %>
    <% if @student.errors.any? %>
    <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
        <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    </div>
<% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
    <% end %>